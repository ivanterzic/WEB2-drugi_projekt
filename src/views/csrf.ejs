<!DOCTYPE html>
<html>  
    <head>
        <title>CSRF</title>
        <%- include('partials/header') %>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <style>
            table {
                border-collapse: collapse;
                width: 100%;
            }

            th, td {
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(odd) {
                background-color: #f2f2f2;
            }

            th {
                background-color: darkslategrey;
                color: white;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <%- include('partials/csrfdesc')%>
            <div class="d-flex justify-content-center">
                <div class="text-center d-flex w-50 flex-column mb-5 justify-content-center">
                    <h6 class="lead">Stanja računa</h6>
                    <table class="mb-5">
                        <thead>
                            <tr>
                                <th class="text-center">Ime</th>
                                <th class="text-center">Stanje</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i = 0; i < results.length ; ++i){ %>
                                <tr>
                                    <td class="text-center"><%= results[i].name %></td>
                                    <td class="text-center"><%= results[i].account_balance %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <h6 class="lead">Stanja računa - Sustav s otklonjenom ranjivosti</h6>
                    <table class="mb-5">
                        <thead>
                            <tr>
                                <th class="text-center">Ime</th>
                                <th class="text-center">Stanje</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i = 0; i < results.length ; ++i){ %>
                                <tr>
                                    <td class="text-center"><%= resultss[i].name %></td>
                                    <td class="text-center"><%= resultss[i].account_balance %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
    </body>
</html>
